<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:MonkeyFinder.View.Behaviours"
             x:Class="MonkeyFinder.View.MenuPage"
             Title="MenuPage">
    <VerticalStackLayout>
        <Button Text="Change Width"
                Style="{StaticResource ButtonOutline}">
            <Button.Behaviors>
                <behaviors:ButtonResizeBehavior/>
            </Button.Behaviors>
        </Button>
        <Button Text="Change Width 2"
                Style="{StaticResource ButtonOutline}">
            <Button.Behaviors>
                <behaviors:ButtonResizeBehavior/>
            </Button.Behaviors>
        </Button>
    </VerticalStackLayout>
</ContentPage>